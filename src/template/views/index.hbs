<!DOCTYPE html>
<html lang="en">

<head>
    {{>headerLinks}}
</head>

<body>

    {{>navbar}}
    <br />
    <!-- Close Header -->

    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row" style="margin-top : 10px">
                    <div class="col-md-6 col-12 header_leftSide">
                        <h6>Welcome to the App</h6>
                        <h1> Get the <span style="color: #0097e6">Latest</span> Weather Info of your City</h1><br />
                        <a href="/weather"><button class="btn btn-primary"
                                style="border-radius: 50px; font-weight : 700; font-family: 'Piazzolla', serif;">Check
                                Now</button></a>
                    </div>
                    <div class="col-md-6 col-12 header_rightSide">
                        <div id="carouselExampleControls" class="carousel slide sliding" data-ride="carousel">
                            <div class="carousel-inner">
                                <div class="carousel-item active">
                                    <img src="./images/1.svg" alt="First slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="./images/2.svg" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                    <img src="./images/3.svg" alt="Third slide">
                                </div>
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleControls" role="button"
                                data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleControls" role="button"
                                data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Header End -->

    {{>footer}}

</body>

</html>